{
  "openapi":"3.0.0",
  "info": {
    "title":"Ignite Delivery API",
    "version":"1.0",
    "description": "Delivery API",
    "contact": {
      "name": "Luiz Gon√ßalves",
      "email": "luizhbgoncalves@gmail.com"
    }
  },
  "paths": {
    "/": {
      "get": {
        "tags": ["/"],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/app_error"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/create_user"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "400": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validation_failed"
                }
              }
            }
          }
        }
      }
    },
    "/users/session": {
      "post": {
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/authenticate_fields"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/validation_failed"
                }
              }
            }
          },
          "401": {
            "description": "Incorrect credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/app_error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "authenticate_fields": {
        "type": "object",
        "properties": {
          "email_or_username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "create_user": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "validation_failed": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "default": 400
          },
          "key": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                },
                "field": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "app_error": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number"
          },
          "messages": {
            "type": "string"
          }
        }
      }
    }
  }
}
